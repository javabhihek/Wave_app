<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signup">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/btn_backup"
        android:layout_height="183dp"
        android:src="@drawable/signup" />

    <EditText
        android:id="@+id/edt_nameup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:textColor="#88888C"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttxt"
        android:hint="Full name"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_emailup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textEmailAddress"
        android:textColor="#88888C"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttxt"
        android:hint="Enter email id"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_mobup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="phone"
        android:textColor="#88888C"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttxt"
        android:hint="Enter Mobile no"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_genderup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType=""
        android:textColor="#88888C"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttxt"
        android:hint="Enter Gender (M/F)"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_dobup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="date"
        android:textColor="#88888C"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttxt"
        android:hint="Enter Date of birth."
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_passup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="#88888C"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttxt"
        android:hint="Enter password"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/edt_repassup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:textColor="#88888C"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edttxt"
        android:hint="Enter Re-password"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/chk_termsup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="I accept all the Terms and Conditions !" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Already have an account? Login"
        android:textColor="@color/wave"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btnsign"
        android:text="SIGN-UP" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="with sign-in"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#101010"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="62dp"
            android:layout_height="65dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:layout_width="61dp"
            android:layout_height="67dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/gmail" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/google" />
    </LinearLayout>

</LinearLayout>
</ScrollView>